<?xml version="1.0" ?>
<launch>

    <arg name="markerSize"      default="0.15"/>    <!-- in m -->
    <arg name="ref_frame"       default=""/>  <!-- leave empty and the pose will be published wrt param parent_name -->

    <node pkg="tf2_ros" type="static_transform_publisher" name="camera_link_broadcaster" args="0.05 0 0.28 0.5 -0.5 0.5 -0.5 base_link camera_rgb_optical_frame" />

    <node pkg="aruco_ros" type="marker_publisher" name="aruco_marker_publisher">
        <remap from="/camera_info" to="/rgb/camera_info" />
        <remap from="/image" to="/rgb/image_raw" />
        <param name="image_is_rectified" value="True"/>
        <param name="marker_size"        value="$(arg markerSize)"/>
        <param name="reference_frame"    value="$(arg ref_frame)"/>   <!-- frame in which the marker pose will be refered -->
        <param name="camera_frame"       value="$camera_rgb_optical_frame"/>
    </node>

</launch>

